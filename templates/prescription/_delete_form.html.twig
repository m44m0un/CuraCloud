<form method="post" action="{{ path('admin_prescription_delete', {'id': prescription.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ prescription.id) }}">
    <button type="submit" class="btn rounded-pill btn-outline-danger"title="Delete">
        <i class="fas fa-trash-alt"></i> Delete
    </button>
</form>
