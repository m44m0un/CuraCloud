{% extends 'BackOffice/base.html.twig' %}

{% block title %}Medical Record Index{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">Medical Record Index</h1>

    <div class="text-right mb-3">
        <a href="{{ path('admin_medical_record_new') }}" class="btn btn-success"><i class="fas fa-plus-circle"></i> Create New Record</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover shadow">
            <thead class="thead-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Medical History</th>
                    <th scope="col">Surgical History</th>
                    <th scope="col">Family History</th>
                    <th scope="col">Allergies</th>
                    <th scope="col">Height (cm)</th>
                    <th scope="col">Weight (kg)</th>
                    <th scope="col">Blood Type</th>
                    <th scope="col">Diseases</th>
                    <th scope="col">Medications</th>
                    <th scope="col">Vaccines</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for medical_record in medical_records %}
                <tr>
                    <td>{{ medical_record.id }}</td>
                    <td>{{ medical_record.medicalHistory }}</td>
                    <td>{{ medical_record.surgicalHistory }}</td>
                    <td>{{ medical_record.familyHistory }}</td>
                    <td>{{ medical_record.allergies }}</td>
                    <td>{{ medical_record.height }}</td>
                    <td>{{ medical_record.weight }}</td>
                    <td>{{ medical_record.bloodType }}</td>
                    <td>{{ medical_record.diseases }}</td>
                    <td>{{ medical_record.medications }}</td>
                    <td>{{ medical_record.vaccines }}</td>
                    <td class="text-center">
                        <a href="{{ path('admin_medical_record_show', {'id': medical_record.id}) }}" class="btn btn-info btn-sm"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('admin_medical_record_edit', {'id': medical_record.id}) }}" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="12" class="text-center">No records found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
