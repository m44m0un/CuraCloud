{% extends 'Backoffice/base.html.twig' %}

{% block title %}Appointment{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Appointment Details</h1>

    <div class="card">
        <div class="card-header">
            Appointment Information
        </div>
        <div class="card-body">
            <h5 class="card-title">Appointment #{{ appointment.id }}</h5>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row">Description</th>
                            <td>{{ appointment.description }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Status</th>
                            <td>{{ appointment.status }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Start Date</th>
                            <td>{{ appointment.startDate ? appointment.startDate|date('Y-m-d H:i:s') : 'N/A' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">End Date</th>
                            <td>{{ appointment.endDate ? appointment.endDate|date('Y-m-d H:i:s') : 'N/A' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="{{ path('admin_app_appointment_index') }}" class="btn btn-secondary">Back to List</a>
            <div>
                <a href="{{ path('admin_app_appointment_edit', {'id': appointment.id}) }}" class="btn btn-primary">Edit</a>
                {{ include('/BackOffice/appointment/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
